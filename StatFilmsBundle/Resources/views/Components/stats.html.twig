{% block stats %}
    <section id="stats-container">
        <div class="row">
            <div class="col s12 m6" style="float:none; margin-right:auto;">
                <ul class="collection with-header">
                    <li class="collection-header"><h4>Les 10 Realisateurs les plus visibles</h4></li>
                    {% for arrReal in arrBestReals %}
                        <li class="collection-item"><span>{{ loop.index }} --- </span>{{ arrReal.realisateur }} avec {{ arrReal.nbfilms }} films</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m6" style="float:none; margin-right:auto;">
                <ul class="collection with-header">
                    <li class="collection-header"><h4>Nationnalités ayant le plus de succès</h4></li>
                    {% for arrPays in arrBestPays %}
                        <li class="collection-item"><span>{{ loop.index }} --- </span>{{ arrPays.paysorigine }} avec {{ arrPays.nbfilms }} films</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>
    
{% endblock %}
